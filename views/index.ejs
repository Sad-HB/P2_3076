<script>
let contactIdCounter = 1; 

const contactForm = document.querySelector('#contact-form form');
contactForm.addEventListener('submit', async function (event) {
    event.preventDefault(); 
    const confirmationMessage = document.getElementById('contact-confirmation-message');
    confirmationMessage.style.display = 'none';

    const recaptchaResponse = grecaptcha.getResponse();
    if (!recaptchaResponse) {
        confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">‚ùå <b><%= __('recaptcha_confirm') %></b></div>`;
        confirmationMessage.style.display = 'block';
        return;
    }

    try {
        const formData = new URLSearchParams();
        formData.append('email', contactForm.email.value);
        formData.append('name', contactForm.name.value);
        formData.append('comment', contactForm.comment.value);
        formData.append('g-recaptcha-response', recaptchaResponse);
        for (let [key, value] of formData.entries()) {
            console.log('FORMDATA', key, value);
        }
        const response = await fetch('/contact/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: formData.toString()
        });
        const result = await response.json();
        if (result.success) {
            confirmationMessage.innerHTML = `<div style="background:#eafaf1;border:2px solid #28a745;color:#218838;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">‚úîÔ∏è <b><%= __('contact_form_success') %></b></div>`;
            confirmationMessage.style.display = 'block';
            contactForm.reset();
            grecaptcha.reset(); 
        } else {
            confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">‚ùå <b>${result.message || `<%= __('contact_form_error') %>`}</b></div>`;
            confirmationMessage.style.display = 'block';
        }
    } catch (error) {
        confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">‚ùå <b><%= __('contact_form_error') %></b></div>`;
        confirmationMessage.style.display = 'block';
    }
});


const paymentForm = document.getElementById('paymentForm');
const paymentMessage = document.getElementById('payment-message');
paymentForm.addEventListener('submit', async function(event) {
    event.preventDefault();
    paymentMessage.style.display = 'none';
    paymentMessage.innerHTML = '';
    const formData = new URLSearchParams();
    formData.append('email', paymentForm.email.value);
    formData.append('cardholderName', paymentForm.cardholderName.value);
    formData.append('cardNumber', paymentForm.cardNumber.value);
    formData.append('expiryMonth', paymentForm.expiryMonth.value);
    formData.append('expiryYear', paymentForm.expiryYear.value);
    formData.append('cvv', paymentForm.cvv.value);
    formData.append('amount', paymentForm.amount.value);
    formData.append('currency', paymentForm.currency.value);
    formData.append('servicio', paymentForm.servicio.value);
    try {
        const response = await fetch('/payment/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: formData.toString()
        });
        const result = await response.json();
        let bg = '#eafaf1';
        let border = '#28a745';
        let color = '#218838';
        let icon = '‚úîÔ∏è';
        let msg = '';
        if (result.success) {
            msg = `${icon} <b><%= __('payment_success') %></b>`;
            if (result.data && result.data.transaction_id) {
                msg += `<br><span style='font-size:15px;color:#555;'><%= __('transaction_id') %>: <b>${result.data.transaction_id}</b></span>`;
            }
        } else {
            bg = '#fff0f0';
            border = '#dc3545';
            color = '#b02a37';
            icon = '‚ùå';
            msg = `${icon} <b>${result.message || 'Pago rechazado o error desconocido.'}</b>`;
        }
        paymentMessage.innerHTML = `<div style="background:${bg};border:2px solid ${border};color:${color};border-radius:10px;padding:18px 10px;line-height:1.5;">${msg}</div>`;
        paymentMessage.style.display = 'block';
        if (result.success) paymentForm.reset();
    } catch (error) {
        paymentMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;">‚ùå <b>Error al procesar el pago. Intente nuevamente.</b></div>`;
        paymentMessage.style.display = 'block';
    }
});

