window.addEventListener('DOMContentLoaded', function () {
    // Localizaci√≥n de fechas en la tabla de contactos
    const dateCells = document.querySelectorAll('#contact-list tbody tr td:nth-child(6)');
    dateCells.forEach(cell => {
        const raw = cell.textContent;
        if (!raw || raw === 'Fecha y Hora') return;
        const date = new Date(raw);
        if (!isNaN(date.getTime())) {
            let locale = '<%= locale %>';
            let options = { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' };
            if (locale === 'en') {
                options = { ...options, hour12: true };
                cell.textContent = date.toLocaleString('en-US', options);
            } else {
                options = { ...options, hour12: false };
                cell.textContent = date.toLocaleString('es-VE', options);
            }
        }
    });

    // Localizaci√≥n de montos en formularios y mensajes
    const amountInputs = document.querySelectorAll('input[name="amount"]');
    amountInputs.forEach(input => {
        input.addEventListener('blur', function() {
            let value = parseFloat(input.value);
            if (!isNaN(value)) {
                let locale = '<%= locale %>';
                let currency = document.getElementById('currency')?.value || (locale === 'en' ? 'USD' : 'VES');
                let formatted = value.toLocaleString(locale === 'en' ? 'en-US' : 'es-VE', {
                    style: 'currency',
                    currency: currency,
                    minimumFractionDigits: 2
                });
                document.getElementById('amount').value = value;
                document.getElementById('amount').setAttribute('data-formatted', formatted);
            }
        });
    });

    // Duplicar im√°genes para efecto de ciclo infinito
    const track = document.querySelector('.gallery-track');
    if (track) {
        const items = Array.from(track.children);
        items.forEach(item => {
            const clone = item.cloneNode(true);
            track.appendChild(clone);
        });
    }
});
