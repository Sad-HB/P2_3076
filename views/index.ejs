<script>
let contactIdCounter = 1; 

const contactForm = document.querySelector('#contact-form form');
contactForm.addEventListener('submit', async function (event) {
    event.preventDefault(); 
    const confirmationMessage = document.getElementById('contact-confirmation-message');
    confirmationMessage.style.display = 'none';

    const recaptchaResponse = grecaptcha.getResponse();
    if (!recaptchaResponse) {
        confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">❌ <b>Por favor, confirma el reCAPTCHA antes de enviar el formulario.</b></div>`;
        confirmationMessage.style.display = 'block';
        return;
    }

    try {
        const formData = new URLSearchParams();
        formData.append('email', contactForm.email.value);
        formData.append('name', contactForm.name.value);
        formData.append('comment', contactForm.comment.value);
        formData.append('g-recaptcha-response', recaptchaResponse);
        for (let [key, value] of formData.entries()) {
            console.log('FORMDATA', key, value);
        }
        const response = await fetch('/contact/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: formData.toString()
        });
        const result = await response.json();
        if (result.success) {
            confirmationMessage.innerHTML = `<div style="background:#eafaf1;border:2px solid #28a745;color:#218838;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">✔️ <b>¡Formulario de contacto enviado correctamente!</b></div>`;
            confirmationMessage.style.display = 'block';
            contactForm.reset();
            grecaptcha.reset(); 
        } else {
            confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">❌ <b>${result.message || 'Error al enviar el formulario'}</b></div>`;
            confirmationMessage.style.display = 'block';
        }
    } catch (error) {
        confirmationMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;font-size:18px;text-align:center;max-width:420px;margin:0 auto;">❌ <b>Error al enviar el formulario</b></div>`;
        confirmationMessage.style.display = 'block';
    }
});


const paymentForm = document.getElementById('paymentForm');
const paymentMessage = document.getElementById('payment-message');
paymentForm.addEventListener('submit', async function(event) {
    event.preventDefault();
    paymentMessage.style.display = 'none';
    paymentMessage.innerHTML = '';
    const formData = new URLSearchParams();
    formData.append('email', paymentForm.email.value);
    formData.append('cardholderName', paymentForm.cardholderName.value);
    formData.append('cardNumber', paymentForm.cardNumber.value);
    formData.append('expiryMonth', paymentForm.expiryMonth.value);
    formData.append('expiryYear', paymentForm.expiryYear.value);
    formData.append('cvv', paymentForm.cvv.value);
    formData.append('amount', paymentForm.amount.value);
    formData.append('currency', paymentForm.currency.value);
    formData.append('servicio', paymentForm.servicio.value);
    try {
        const response = await fetch('/payment/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: formData.toString()
        });
        const result = await response.json();
        let bg = '#eafaf1';
        let border = '#28a745';
        let color = '#218838';
        let icon = '✔️';
        let msg = '';
        if (result.success) {
            msg = `${icon} <b>¡Su pago ha sido aceptado!</b>`;
            if (result.data && result.data.transaction_id) {
                msg += `<br><span style='font-size:15px;color:#555;'>ID Transacción: <b>${result.data.transaction_id}</b></span>`;
            }
        } else {
            bg = '#fff0f0';
            border = '#dc3545';
            color = '#b02a37';
            icon = '❌';
            msg = `${icon} <b>${result.message || 'Pago rechazado o error desconocido.'}</b>`;
        }
        paymentMessage.innerHTML = `<div style="background:${bg};border:2px solid ${border};color:${color};border-radius:10px;padding:18px 10px;line-height:1.5;">${msg}</div>`;
        paymentMessage.style.display = 'block';
        if (result.success) paymentForm.reset();
    } catch (error) {
        paymentMessage.innerHTML = `<div style="background:#fff0f0;border:2px solid #dc3545;color:#b02a37;border-radius:10px;padding:18px 10px;line-height:1.5;">❌ <b>Error al procesar el pago. Intente nuevamente.</b></div>`;
        paymentMessage.style.display = 'block';
    }
});

document.querySelector('#payment-form form').addEventListener('submit', function (event) {
    event.preventDefault(); 
    const confirmationMessage = document.getElementById('payment-confirmation-message');
    confirmationMessage.style.display = 'block'; 
    setTimeout(() => {
        this.submit(); 
    }, 2000); 
});

function showContactPreview(event) {
    event.preventDefault(); 

   
    const id = contactIdCounter++; 
    const email = document.getElementById('email').value;
    const name = document.getElementById('name').value;
    const comment = document.getElementById('comment').value;
    const ip = '127.0.0.1'; 
    const timestamp = new Date().toLocaleString(); 

 
    document.getElementById('preview-id').textContent = id;
    document.getElementById('preview-email').textContent = email;
    document.getElementById('preview-name').textContent = name;
    document.getElementById('preview-comment').textContent = comment;
    document.getElementById('preview-ip').textContent = ip;
    document.getElementById('preview-timestamp').textContent = timestamp;

    document.getElementById('email').value = email;
    document.getElementById('name').value = name;
    document.getElementById('comment').value = comment;

    document.getElementById('contact-preview').style.display = 'block';
}

window.addEventListener('DOMContentLoaded', function () {
    const dateCells = document.querySelectorAll('#contact-list tbody tr td:nth-child(6)');
    dateCells.forEach(cell => {
        const raw = cell.textContent;
        if (!raw || raw === 'Fecha y Hora') return;
        const date = new Date(raw);
        if (!isNaN(date.getTime())) {
            const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };
            cell.textContent = date.toLocaleString('es-ES', options);
        }
    });
});
</script>


