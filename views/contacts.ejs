<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contactos Registrados</title>
</head>
<body>
    <header>
        <h1>Contactos Registrados</h1>
    </header>

    <section>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Comentario</th>
                    <th>IP</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.forEach(contact => { %>
                    <tr>
                        <td><%= contact.id %></td>
                        <td><%= contact.name %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.comment %></td>
                        <td><%= contact.ip %></td>
                        <td><%= new Date(contact.timestamp).toLocaleDateString() %></td>
                        <td><%= new Date(contact.timestamp).toLocaleTimeString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>

    <footer>
        <p>&copy; 2025 Alquiler de Bicicletas El√©ctricas y Scooters Urbanos. Todos los derechos reservados.</p>
    </footer>
</body>
</html>