<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Iniciar Sesión</title>
  <style>
    body{
      margin: 0;
      padding: 0;
      min-height:100vh;
      font-family: 'Poppins', sans-serif;
      background:#1b1b1b;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .main-box{
      width: 320px;
      height: 480px;
      position: relative;
      margin: 6% auto;
      background:#1b1b1b;
      display: flex;
      justify-content: center;
      align-items: center; 
      overflow: hidden;
      border-radius: 16px;
      box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
    }
    .form-box{
      width: 316px;
      height: 476px;
      position: relative;
      background:#252525; 
      padding: 32px 24px 24px 24px;
      overflow: hidden;
      z-index: 5;
      border-radius: 14px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .button-box{
      width: 220px;
      margin: 0 auto 30px auto;
      position: relative;
      border-radius:30px; 
      display: flex;
      justify-content: space-around;
      background: #232323;
      box-shadow: 0 0 10px 2px #222 inset;
    }
    .toggle-btn{
      padding: 10px 30px;
      cursor: pointer;
      background:transparent;
      border: 0;
      font-size: 15px;
      font-weight: bold;
      color: #fff;
      outline: none;
      position: relative;
      z-index: 2;
      transition: 0.3s;
    }
    .toggle-btn.active{
      background: #2fd0f5;
      color: #222;
      border-radius: 30px;
      box-shadow: 0 0 16px 2px #2fd0f5;
    }
    .input-group{
      width: 100%;
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 18px;
    }
    .input-field{
      width: 100%;
      padding: 9px 5px;
      border: none;
      border-bottom: 2px solid #2fd0f5;
      background: transparent;
      color: #fff;
      font-size: 16px;
      outline: none;
      transition: border 0.3s, border-radius 0.3s;
      border-radius: 30px;
      margin-bottom: 6px;
    }
    .input-field:focus{
      border-bottom: 2px solid #57AAB4;
      border-radius: 30px 30px 0 0;
    }
    .submit-btn{
      width: 100%;
      padding: 12px 0;
      margin-top: 18px;
      background: linear-gradient(to right, #03a9f4,#57AAB4,#03a9f4);
      border: none;
      border-radius: 30px;
      color: #fff;
      font-weight: bold;
      font-size: 17px;
      cursor: pointer;
      transition: background 0.3s;
      box-shadow: 0 0 10px #2fd0f5;
    }
    .submit-btn:hover {
      background:#57AAB4;
      color: #fff;
      box-shadow: 0 0 20px #57AAB4;
    }
    .register-link{
      text-align: center;
      font-size: 15px;
      margin:18px 0 0 0;
      color: #fff;
    }
    .register-link a{
      color: #2fd0f5;
      text-decoration: none;
      font-weight: 600;
    }
    .register-link a:hover{
      text-decoration: underline;
    }
    .error {
      background: rgba(255,0,0,0.12);
      color: #ffb3b3;
      border-radius: 8px;
      padding: 10px 0;
      text-align: center;
      margin-bottom: 10px;
      font-size: 1rem;
    }
    @media (max-width: 600px) {
      .main-box, .form-box {
        width: 98vw;
        min-width: 0;
        height: auto;
        padding: 12vw 2vw 8vw 2vw;
        box-sizing: border-box;
      }
      .input-group {
        margin-top: 18px;
        gap: 12px;
      }
      .submit-btn, .toggle-btn {
        font-size: 1rem;
        padding: 10px 0;
      }
      .button-box {
        width: 98vw;
        min-width: 0;
        margin: 0 auto 18px auto;
      }
    }
  </style>
</head>
<body>
  <div class="main-box">
    <div class="form-box">
      <div class="button-box">
        <button class="toggle-btn active" onclick="window.location.href='/login'">Acceso</button>
      </div>
      <a href="/" style="display:block;text-align:center;margin-bottom:18px;padding:8px 22px;background:#57AAB4;color:#fff;font-weight:bold;border-radius:8px;text-decoration:none;box-shadow:0 2px 8px #0002;transition:background 0.2s;">Ir a la página inicial</a>
      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>
      <form action="/login" method="POST" class="input-group">
        <input type="text" id="username" name="username" class="input-field" placeholder="Usuario" required>
        <div style="position:relative;">
          <input type="password" id="password" name="password" class="input-field" placeholder="Contraseña" required style="padding-right:10px;">
          <button type="button" id="togglePassword" tabindex="-1" style="position: absolute; right: 10px; border: 5px solid white;border-radius: 50%; background: rgb(255, 255, 255);">
            <i id="eyeIcon" class="fa fa-eye" aria-hidden="true"></i>
          </button>
        </div>
        <button type="submit" class="submit-btn">Acceso</button>
      </form>
      <form action="/auth/google" method="GET" style="margin-top: 16px;">
        <button type="submit" class="submit-btn" style="background:#232323;color:#2fd0f5;box-shadow:none;">Iniciar con Google</button>
      </form>
      <div style="text-align:center;margin-top:18px;">
        <a href="/forgot-password" style="color:#2fd0f5;text-decoration:underline;font-size:15px;">¿Olvidaste tu contraseña?</a>
      </div>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
  <script>
    const toggleBtn = document.getElementById('togglePassword');
    const pwdInput = document.getElementById('password');
    const eyeIcon = document.getElementById('eyeIcon');
    if(toggleBtn && pwdInput && eyeIcon) {
      toggleBtn.addEventListener('click', function() {
        if (pwdInput.type === 'password') {
          pwdInput.type = 'text';
          eyeIcon.classList.remove('fa-eye');
          eyeIcon.classList.add('fa-eye-slash');
        } else {
          pwdInput.type = 'password';
          eyeIcon.classList.remove('fa-eye-slash');
          eyeIcon.classList.add('fa-eye');
        }
      });
    }
  </script>
</body>
</html>